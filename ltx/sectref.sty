\def\LABELS#1{}

\def\MkCommand#1{\expandafter\def\csname #1\endcsname}

\def\newsref#1#2{%
   \MkCommand{#1label}##1{\label{#1:##1}\LABELS{\textsl{[#1:##1]}}}%
   \MkCommand{#1ref}##1{#2\ref{#1:##1}}%
   \MkCommand{#1rawref}##1{\ref{#1:##1}}%
   \MkCommand{#1pref}##1{\pageref{#1:##1}}%
  }
\newsref{subsect}{}
\newsref{sect}{\sectionname~}
\newsref{chapt}{\chaptername~}

\def\partname{Part}
\newsref{part}{\partname~}
